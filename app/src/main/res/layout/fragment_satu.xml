<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSatu">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="240dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:text="Login" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnPindah1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:text="Login" />

    <Button
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:id="@+id/lupaPassword"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPindah1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="lupa password ?" />


    <Button
        android:id="@+id/Registrasi"
        android:layout_width="153dp"
        android:layout_height="34dp"
        android:layout_below="@+id/btnPindah1"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="32dp"
        android:layout_toRightOf="@+id/lupaPassword"
        android:backgroundTint="@color/white"
        android:text="Registrasi"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/lupaPassword"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Chat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_baseline_chat_24" />

        <ImageView
            android:id="@+id/Info"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_baseline_info_24" />
    </LinearLayout>



</RelativeLayout>